<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="780.0" maxWidth="1550.0" minHeight="780.0" minWidth="1550.0" prefHeight="780.0" prefWidth="1550.0" spacing="20.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myproject.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Register" textFill="WHITE">
        <font>
            <Font name="Berlin Sans FB Demi Bold" size="25.0" />
        </font></Label>
    <TextField fx:id="usernameField" maxWidth="300.0" prefHeight="37.0" prefWidth="300.0" promptText="Username" />
    <PasswordField fx:id="passwordField" maxWidth="300.0" prefHeight="34.0" prefWidth="300.0" promptText="Password" />
    <PasswordField fx:id="retypePasswordField" maxWidth="300.0" prefHeight="34.0" prefWidth="300.0" promptText="Retype Password" />
    <Button onAction="#onRegister" prefHeight="26.0" prefWidth="70.0" style="-fx-background-color: #38a0dc;" text="Register">
      <font>
         <Font name="Eras Demi ITC" size="13.0" />
      </font></Button>
</VBox>
