<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <TableView fx:id="expensesTable">
        <columns>
            <TableColumn fx:id="dateColumn" prefWidth="150" text="Date">
                <cellValueFactory>
                    <PropertyValueFactory property="dateOfTrans" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="amountColumn" prefWidth="100" text="Amount">
                <cellValueFactory>
                    <PropertyValueFactory property="amount" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="remarksColumn" prefWidth="200" text="Category">
                <cellValueFactory>
                    <PropertyValueFactory property="remarks" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="categoryColumn" prefWidth="150" text="Remarks">
                <cellValueFactory>
                    <PropertyValueFactory property="category" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</AnchorPane>
